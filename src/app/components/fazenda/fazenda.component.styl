.fazenda__wrapper {
  width 300px
  height 150px
  background-image url('../../../assets/grass.jpg')
  background-size cover
  z-index 1
  position relative
  display inline-block
  margin 10px 10px
  border-radius 20px
  overflow hidden
  cursor pointer
  transition .3s
  -webkit-font-smoothing: antialiased;

  &:hover {

    transform scale(1.05)

    .fazenda__overlay {
      opacity 0.6
    }
  }
}

.fazenda {
  &__text-wrapper {
    padding-top 70px
    color #fff
    z-index 1
  }

  &__overlay {
    height 100%
    width 100%
    background-color #000
    position absolute
    opacity 0.4
    z-index -1
    top 0
    transition .3s
  }

  &__talhoes {
    font-weight 100
  }
}
